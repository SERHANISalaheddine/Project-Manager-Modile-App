<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TOP ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/view_status_indicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/dot_purple"/>

            <TextView
                android:id="@+id/tv_project_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textColor="#2D2D2D"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Optimize performance and caching"/>

            <TextView
                android:id="@+id/tv_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9E9E9E"
                android:textSize="11sp"
                tools:text="27 Sept"/>
        </LinearLayout>

        <!-- AVATARS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatars -->
            <LinearLayout
                android:id="@+id/layout_member_avatars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:id="@+id/avatar_1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_avatar_placeholder_1"/>

                <View
                    android:id="@+id/avatar_2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="-8dp"
                    android:background="@drawable/bg_avatar_placeholder_2"/>

                <View
                    android:id="@+id/avatar_3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="-8dp"
                    android:background="@drawable/bg_avatar_placeholder_3"/>
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/view_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:progress="60"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="#6C4DFF"
            android:backgroundTint="#EDEAFF"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
