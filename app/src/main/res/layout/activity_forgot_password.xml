<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F3D">

    <!-- Form Layout -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/card_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock"/>

        <!-- Title -->
        <TextView
            android:text="Forgot Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <!-- Description -->
        <TextView
            android:text="Enter your email address and we'll send you a link to reset your password."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#777"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/tv_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="14sp"
            android:textColor="@color/text_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/email"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/my_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send Reset Link"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_gradient"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <!-- Success Layout (initially hidden) -->
    <LinearLayout
        android:id="@+id/successLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/card_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            app:tint="#10B981"/>

        <!-- Title -->
        <TextView
            android:text="Check your email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Success Message -->
        <TextView
            android:id="@+id/tvSuccessMessage"
            android:text="If your email is registered, you will receive a password reset link. Please check your inbox."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#777"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Try Again Button -->
        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Try Again"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_gradient"
            android:layout_marginTop="8dp"/>

        <!-- Back to Login -->
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Back to Login"
            android:textColor="@color/primary"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
