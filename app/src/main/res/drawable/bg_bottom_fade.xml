<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent background -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Fade from transparent to your screen bg (#F8F9FE) -->
    <item android:gravity="bottom">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#00F8F9FE"
                android:centerColor="#80F8F9FE"
                android:endColor="#F8F9FE" />
        </shape>
    </item>

</layer-list>
