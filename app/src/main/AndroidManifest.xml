<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Onboarding/Splash Activity (Launcher) -->
        <activity
            android:name=".activities.OnboardingActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"
            android:windowSoftInputMode="adjustResize" />

        <!-- Sign Up Activity -->
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main/Home Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Create Project Activity -->
        <activity
            android:name=".activities.CreateProjectActivity"
            android:exported="false"
            android:label="@string/create_new_project"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.MyApplication"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <!-- Add Member Activity (Full screen alternative to bottom sheet) -->
        <activity
            android:name=".activities.AddMemberActivity"
            android:exported="false"
            android:label="@string/add_member"
            android:theme="@style/Theme.MyApplication">
        </activity>

    </application>

</manifest>
